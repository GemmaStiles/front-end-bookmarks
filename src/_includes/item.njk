---
layout: base.njk
---
{% import "partials/macros.njk" as macros with context %}

<h2>{{ title }}</h2>

{% if definition %}
  <blockquote>
    {{ definition.text }}
  <cite><a href="{{ definition.cite.url }}"> {{ definition.cite.text }}</a></cite>
  </blockquote>
{% endif %}

{% if links %}
  <h3><span>Links about <code>{{ title }}</code></span></h3>
  {% links links, tags[0] %}
{% endif %}

{% if related %}
  <h3><span>Related links</span></h3>
  {% links related, tags[0] %}
{% endif %}

{{ content | safe }}

{{macros.linklist("Explore other pages", "", "entry", 4, true)}}
